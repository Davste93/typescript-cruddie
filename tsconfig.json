{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "declaration": true,
    "sourceMap": true,
    "target": "es5",
    "moduleResolution": "node",
    "outDir": "lib"
  },
  "filesGlob": [
    "src/**/*.ts",
    "typings/main.d.ts",
    "!node_modules/**/*.ts"
  ],
  "files": [
    "src/classes/helper/ApiParser.ts",
    "src/classes/helper/ApiRepository.ts",
    "src/classes/helper/List.ts",
    "src/index.ts",
    "src/interfaces/data/DataRepository.ts",
    "src/interfaces/model/Model.ts",
    "src/interfaces/model/Serializable.ts",
    "src/interfaces/service/Service.ts",
    "typings/main.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": true
  }
}
